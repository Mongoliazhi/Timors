<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 class="text-info">提莫蛳商品上传
                        <small>(请仔细填写您要上传的信息)</small>
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <!--<a class="close-link">-->
                        <!--<i class="fa fa-times"></i>-->
                        <!--</a>-->
                    </div>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品分类</label>

                            <div class="col-sm-10">
                                <select id="cat_id" class="form-control m-b" name="account">
                                    <% for(var i=0;i<category.length;i++){ %>
                                        <option value="<%= category[i].cat_id%>"><%= category[i].category%></option>
                                    <% }%>
                                    <!--<option> 食品</option>-->
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品名称</label>
                            <div class="col-sm-10">
                                <input id="goods_name" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品原价</label>
                            <div class="col-sm-10">
                                <input id="goods_Yprice" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品售价</label>
                            <div class="col-sm-10">
                                <input id="goods_Sprice" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品数量</label>
                            <div class="col-sm-10">
                                <input id="goods_num" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品展示图</label>
                            <div class="col-sm-10">
                                <div id="uploader-demo">
                                    <!--用来存放item-->
                                    <div id="fileList" class="uploader-list" style="overflow: auto;"></div>
                                    <br>
                                    <div id="filePicker">选择图片</div>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商品内容</label>
                            <div class="col-sm-10">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5>请编辑您的商品内容</h5>
                                        <div class="ibox-tools">
                                            <a class="collapse-link">
                                                <i class="fa fa-chevron-up"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="ibox-content no-padding">
                                        <div id="summernote">
                                            <p>Hello Summernote</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <button id="goods_btn" class="btn btn-primary" type="button">提交</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-form" class="modal fade" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 b-r">
                        <h3 class="m-t-none m-b">登录</h3>

                        <p>欢迎登录本站(⊙o⊙)</p>

                        <form role="form">
                            <div class="form-group">
                                <label>用户名：</label>
                                <input type="email" placeholder="请输入用户名" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>密码：</label>
                                <input type="password" placeholder="请输入密码" class="form-control">
                            </div>
                            <div>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit">
                                    <strong>登录</strong>
                                </button>
                                <label>
                                    <input type="checkbox" class="i-checks">自动登录</label>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-6">
                        <h4>还不是会员？</h4>
                        <p>您可以注册一个账户</p>
                        <p class="text-center">
                            <a href="form_basic.html"><i class="fa fa-sign-in big-icon"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../HPlus/js/bootstrap.min.js?v=3.3.6"></script>
<script src="../HPlus/js/content.min.js?v=1.0.0"></script>
<script src="../HPlus/js/plugins/iCheck/icheck.min.js"></script>


<script>
   $(function () {
       $('#summernote').summernote({
           height: "500px",
           callbacks: {
               onImageUpload: function(files) { //the onImageUpload API
                   img = sendFile(files[0]);
               }
           }
       });

       $("#goods_btn").click(function () {
           var goods_picArr = "";
           var cat_id = $("#cat_id").val();
           var goods_name = $("#goods_name").val();
           var goods_Yprice = $("#goods_Yprice").val();
           var goods_Sprice = $("#goods_Sprice").val();
           var goods_num = $("#goods_num").val();
           var goods_content = $('#summernote').summernote('code');
           
           $("#fileList div").each(function () {
               goods_picArr+=$(this).find("img").attr("src")+",";
           })

           console.log(cat_id,goods_name,goods_Yprice,goods_Sprice,goods_num,goods_picArr,goods_content)
           $.ajax({
               type: "POST",
               url: "/goods/goods_upload",
               data:{
                   cat_id:cat_id,
                   goods_name:goods_name,
                   goods_Yprice:goods_Yprice,
                   goods_Sprice:goods_Sprice,
                   goods_num:goods_num,
                   goods_picArr:goods_picArr,
                   goods_content:goods_content
               },
               success:function(data){
                   console.log(data)
               }

           })

       })
   })
    

    function sendFile(file) {
        data = new FormData();
        data.append("file", file);
        console.log(data);
        $.ajax({
            data: data,
            type: "POST",
            url: "/upload",
            dataType : "html",
            cache: false,
            contentType: false,
            processData: false,
            success: function(url) {
                console.log(url)
                $("#summernote").summernote('insertImage', url, 'image name'); // the insertImage API
            }
        });
    }
</script>

